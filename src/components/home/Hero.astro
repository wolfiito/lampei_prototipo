---
import { heroData } from '../../data/home';
import { Image } from 'astro:assets';
---

<section class="relative w-full h-[calc(100vh-5rem)] flex items-center justify-center overflow-hidden bg-slate-900">
    
    <div class="absolute inset-0 z-0">
        <Image 
        src={heroData.backgroundImage} 
        alt="Background"
        width={1920}
        height={1080}
        format="webp"
        loading="eager"
        fetchpriority="high"
        widths={[360, 720, 1200, 1920]}
        sizes={`(max-width: 360px) 360px, (max-width: 720px) 720px, (max-width: 1200px) 1200px, 1920px`}
        class="w-full h-full object-cover opacity-60"
        />
        <div class="absolute inset-0 bg-black/50 backdrop-blur-[1px]"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 text-center">
        
        <div class="mb-6 animate-fade-in-up opacity-0" style="animation-delay: 0.1s;">
            <span class="inline-block py-1 px-3 rounded-full bg-blue-500/20 text-blue-100 border border-blue-400/30 text-xs font-bold uppercase tracking-widest backdrop-blur-sm">
                Welcome to Lampei
            </span>
        </div>

        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 leading-tight animate-fade-in-up opacity-0 font-serif" style="animation-delay: 0.3s;">
            {heroData.title} <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-300 italic">
                {heroData.titleHighlight}
            </span>
        </h1>

        <p class="text-lg md:text-xl text-slate-200 mb-10 max-w-2xl mx-auto leading-relaxed animate-fade-in-up opacity-0" style="animation-delay: 0.5s;">
            {heroData.description}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up opacity-0" style="animation-delay: 0.7s;">
            <a href={heroData.primaryButton.href} class="btn btn-primary btn-lg border-none bg-blue-600 hover:bg-blue-700 text-white shadow-xl shadow-blue-900/20 rounded-full px-8">
                {heroData.primaryButton.text}
            </a>
            
            <a href={heroData.secondaryButton.href} class="btn btn-outline btn-lg text-white hover:bg-white/10 hover:text-white border-white/40 rounded-full px-8 backdrop-blur-sm">
                {heroData.secondaryButton.text}
            </a>
        </div>
    </div>

    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white/50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }
</style>