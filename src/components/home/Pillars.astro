---
import { pillarsData } from '../../data/home';
import { Church, Users, BookOpen, ArrowRight } from 'lucide-react';

// Mapeo de iconos (String -> Componente)
const icons = {
  church: Church,
  users: Users,
  book: BookOpen
};
---

<section class="relative z-20 px-4 sm:px-6 lg:px-8 -mt-20 mb-24">
  <div class="max-w-7xl mx-auto">
    <div class="grid md:grid-cols-3 gap-8">
      
      {pillarsData.map((pillar) => {
        const IconComponent = icons[pillar.icon as keyof typeof icons];
        
        return (
          <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-slate-100">
            <div class="card-body">
              <div class={`w-14 h-14 rounded-2xl flex items-center justify-center mb-4 ${pillar.color}`}>
                <IconComponent className="w-7 h-7" />
              </div>
              
              <h3 class="card-title text-2xl font-serif text-slate-900 mb-2">
                {pillar.title}
              </h3>
              
              <p class="text-slate-600 leading-relaxed mb-4">
                {pillar.description}
              </p>
              
              <div class="card-actions justify-end">
                <a href={pillar.link} class="btn btn-link px-0 text-slate-900 hover:text-primary group no-underline">
                  Saber m√°s 
                  <ArrowRight className="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" />
                </a>
              </div>
            </div>
          </div>
        );
      })}

    </div>
  </div>
</section>