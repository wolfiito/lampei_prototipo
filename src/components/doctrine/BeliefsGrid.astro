---
import { doctrineData } from '../../data/doctrine';
import { BookOpen, Users, Gift, Flame, Church, CloudSun, Globe, Cross, Layers } from 'lucide-react';

const iconMap = {
    book: BookOpen,
    trinity: Layers,
    cross: Cross,
    gift: Gift,
    users: Users,
    flame: Flame,
    church: Church,
    cloud: CloudSun,
    globe: Globe
} as const;
type IconKey = keyof typeof iconMap;
---

<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {doctrineData.beliefs.map((belief) => {
                // Usamos 'as IconKey' para decirle a TS que confíe en que el string es válido
                const IconComponent = iconMap[belief.icon as IconKey] || BookOpen; 
                
                return (
                    <div class="... flex gap-6 items-start">
                        <IconComponent className="w-6 h-6" />
                        </div>
                );
            })}
        </div>
    </div>
</section>