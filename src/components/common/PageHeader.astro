---
interface Props {
  title: string;
  subtitle: string;
  backgroundImage: string;
}

const { title, subtitle, backgroundImage } = Astro.props;
---

<div class="relative py-24 md:py-32 flex items-center justify-center overflow-hidden bg-slate-900">
  <div 
    class="absolute inset-0 z-0 bg-cover bg-center opacity-40"
    style={`background-image: url('${backgroundImage}');`}
  ></div>
  
  <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent"></div>

  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="text-4xl md:text-6xl font-bold text-white font-serif mb-6 drop-shadow-lg">
      {title}
    </h1>
    <p class="text-lg md:text-xl text-slate-200 leading-relaxed font-light">
      {subtitle}
    </p>
  </div>
</div>