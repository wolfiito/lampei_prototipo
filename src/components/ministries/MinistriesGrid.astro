---
// CAMBIO: Importar desde el archivo correcto
import { ministriesData } from '../../data/ministries'; 
import { ArrowRight, Globe, BookOpen, Heart, Users, Music, ShoppingCart } from 'lucide-react';

const iconMap = {
  map: Globe, // Seg√∫n tu ministries.ts
  users: Users,
  book: BookOpen,
  music: Music,
  shopping: ShoppingCart
} as const;

type IconKey = keyof typeof iconMap;
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-12">
      {/* Accedemos a ministriesData.items para el mapeo */}
      {ministriesData.items.map((item) => {
        const IconComponent = iconMap[item.icon as IconKey] || Globe;

        return (
          <div class={`group relative flex flex-col md:flex-row gap-8 p-8 rounded-[2.5rem] bg-slate-50 border border-slate-100 transition-all duration-500 ${item.isComingSoon ? 'opacity-75' : 'hover:bg-white hover:shadow-2xl hover:shadow-blue-900/5'}`}>
            
            <div class="w-full md:w-48 h-48 shrink-0 overflow-hidden rounded-[2rem] shadow-lg">
              <img 
                // src={item.image} 
                alt={item.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
            </div>

            <div class="flex flex-col justify-center">
              <div class="flex items-center gap-3 mb-4">
                <div class="p-2 rounded-lg bg-blue-100 text-blue-600">
                  <IconComponent className="w-5 h-5" />
                </div>
                {item.isComingSoon && (
                  <span class="text-[10px] font-bold uppercase tracking-widest px-2 py-1 bg-amber-100 text-amber-700 rounded-md">
                    Coming Soon
                  </span>
                )}
              </div>

              <h3 class="text-2xl font-bold text-slate-900 mb-3 font-serif">
                {item.title}
              </h3>

              <p class="text-slate-600 leading-relaxed mb-6 text-sm">
                {item.description}
              </p>

              {!item.isComingSoon ? (
                <a href={item.link} class="inline-flex items-center text-sm font-bold text-blue-600 group/link">
                  {item.buttonText} 
                  <ArrowRight className="ml-2 w-4 h-4 transition-transform group-hover/link:translate-x-1" />
                </a>
              ) : (
                <span class="text-slate-400 text-sm font-medium italic">Available soon</span>
              )}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>