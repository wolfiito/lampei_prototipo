---
import { contactData } from '../../data/contact';
import { Mail, MapPin, Phone, Send, Facebook, Instagram } from 'lucide-react';
---

<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="grid lg:grid-cols-2 gap-16">
            
            <div>
                <h2 class="text-3xl font-bold font-serif text-slate-900 mb-6">Get in touch</h2>
                <p class="text-slate-600 mb-12 text-lg leading-relaxed">
                    Have questions about our ministries or want to join a trip? We are here to help answer any questions you might have.
                </p>

                <div class="space-y-8">
                    
                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-blue-600 shrink-0">
                            <MapPin size={24} />
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-900 text-lg mb-1">Our Office</h3>
                            <p class="text-slate-600">{contactData.info.address.line1}</p>
                            <p class="text-slate-600">{contactData.info.address.line2}</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-blue-600 shrink-0">
                            <Mail size={24} />
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-900 text-lg mb-1">Email Us</h3>
                            <p class="text-slate-600 mb-2">For general inquiries and support.</p>
                            <a href={`mailto:${contactData.info.email}`} class="text-blue-600 font-semibold hover:underline">
                                {contactData.info.email}
                            </a>
                        </div>
                    </div>

                </div>

                <div class="mt-12 pt-12 border-t border-slate-100">
                    <h3 class="font-bold text-slate-900 mb-4">Follow our journey</h3>
                    <div class="flex gap-4">
                        <a href={contactData.info.socials.facebook} class="w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-slate-500 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition-all">
                            <Facebook size={18} />
                        </a>
                        <a href={contactData.info.socials.instagram} class="w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-slate-500 hover:bg-pink-600 hover:text-white hover:border-pink-600 transition-all">
                            <Instagram size={18} />
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-slate-50 rounded-3xl p-8 md:p-10 shadow-sm border border-slate-100">
                <h3 class="text-2xl font-bold font-serif text-slate-900 mb-2">{contactData.form.title}</h3>
                <p class="text-slate-600 mb-8">{contactData.form.description}</p>

                <form action="https://formspree.io/f/TU_ID_DE_FORMSPREE_AQUI" method="POST" class="space-y-6">
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="form-control w-full">
                            <label class="label"><span class="label-text font-bold text-slate-700">First Name</span></label>
                            <input type="text" name="name" placeholder="John" class="input input-bordered w-full bg-white focus:border-blue-500 focus:outline-none" required />
                        </div>
                        <div class="form-control w-full">
                            <label class="label"><span class="label-text font-bold text-slate-700">Last Name</span></label>
                            <input type="text" name="lastname" placeholder="Doe" class="input input-bordered w-full bg-white focus:border-blue-500 focus:outline-none" required />
                        </div>
                    </div>

                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-slate-700">Email Address</span></label>
                        <input type="email" name="email" placeholder="john@example.com" class="input input-bordered w-full bg-white focus:border-blue-500 focus:outline-none" required />
                    </div>

                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-slate-700">Topic</span></label>
                        <select name="topic" class="select select-bordered w-full bg-white focus:border-blue-500 focus:outline-none font-normal text-slate-600">
                            <option disabled selected>Select a topic...</option>
                            {contactData.form.topics.map(topic => (
                                <option value={topic}>{topic}</option>
                            ))}
                        </select>
                    </div>

                    <div class="form-control w-full">
                        <label class="label"><span class="label-text font-bold text-slate-700">Message</span></label>
                        <textarea name="message" class="textarea textarea-bordered h-32 bg-white focus:border-blue-500 focus:outline-none text-base" placeholder="How can we help you?"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-full bg-blue-600 hover:bg-blue-700 border-none text-white h-12 text-lg shadow-lg shadow-blue-600/20">
                        Send Message <Send size={18} className="ml-2" />
                    </button>
                </form>
            </div>

        </div>
    </div>
</section>