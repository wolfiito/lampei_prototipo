---
import { historyData } from '../../data/history';
---

<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="relative">
            
            <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-slate-200 top-0 z-0"></div>

            <div class="space-y-12 md:space-y-24 relative z-10">
                {historyData.timeline.map((item, index) => {
                    const isEven = index % 2 === 0;
                    // Detectamos si es el Ãºltimo elemento para aplicar el truco
                    const isLast = index === historyData.timeline.length - 1;
                    
                    return (
                        <div class={`flex flex-col md:flex-row items-center gap-8 ${isEven ? '' : 'md:flex-row-reverse'} relative`}>
                            
                            {/* TEXTO */}
                            <div class="w-full md:w-1/2 text-center md:text-left px-4">
                                <div class={`flex flex-col ${isEven ? 'md:items-end md:text-right' : 'md:items-start md:text-left'}`}>
                                    <span class="text-6xl font-black text-slate-100 font-serif -mb-4 relative z-0">
                                        {item.year}
                                    </span>
                                    <h3 class="text-2xl font-bold text-blue-900 relative z-10 mt-2">
                                        {item.title}
                                    </h3>
                                    <p class="text-slate-600 mt-4 leading-relaxed max-w-md">
                                        {item.description}
                                    </p>
                                </div>
                            </div>

                            {/* PUNTO CENTRAL */}
                            <div class="relative z-20 flex items-center justify-center hidden md:flex flex-col">
                                {/* El punto visible */}
                                <div class="w-8 h-8 rounded-full bg-blue-600 border-4 border-white shadow-lg relative z-20"></div>
                            </div>

                            {/* IMAGEN */}
                            <div class="w-full md:w-1/2 px-4">
                                <div class="relative group overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 bg-white">
                                    <div class="absolute inset-0 bg-blue-900/20 group-hover:bg-transparent transition-colors z-10"></div>
                                    <img 
                                        src={item.image} 
                                        alt={item.title} 
                                        class="w-full h-64 md:h-80 object-cover transform group-hover:scale-105 transition-transform duration-700"
                                    />
                                </div>
                            </div>

                        </div>
                    );
                })}
            </div>
        </div>
    </div>
</section>