---
import { historyData } from '../../data/history';
import { Sun } from 'lucide-react';

const { meaning } = historyData;
---

<section class="py-20 bg-blue-50 border-b border-blue-100">
  <div class="max-w-4xl mx-auto px-4 text-center">
    
    <div class="flex items-center justify-center gap-3 mb-8">
      <Sun className="text-blue-500 w-8 h-8" />
      <h2 class="text-3xl md:text-4xl font-bold font-serif text-slate-900">
        {meaning.title}
      </h2>
    </div>

    <div class="inline-block bg-white px-8 py-4 rounded-xl shadow-sm border border-blue-100 mb-10">
      <p class="text-lg text-slate-700">
        From the Greek word <span class="font-bold text-blue-600 italic">"{meaning.etymology.word}"</span>
      </p>
      <p class="text-sm text-slate-500 mt-1 font-medium">
        ({meaning.etymology.definition}) • {meaning.etymology.reference}
      </p>
    </div>

    <p class="text-xl text-slate-700 mb-12 leading-relaxed max-w-2xl mx-auto">
      {meaning.description}
    </p>

    <blockquote class="relative p-8 bg-white rounded-2xl shadow-lg border-l-4 border-blue-500">
      <span class="absolute top-4 left-4 text-6xl text-blue-100 font-serif leading-none">“</span>
      
      <p class="text-xl md:text-2xl font-serif text-slate-800 italic relative z-10 leading-relaxed">
        {meaning.bibleVerse}
      </p>
      
      <footer class="mt-6 text-sm font-bold text-blue-600 uppercase tracking-widest">
        — {meaning.bibleReference}
      </footer>
    </blockquote>

  </div>
</section>