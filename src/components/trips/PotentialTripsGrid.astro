---
import { potentialTripsData } from '../../data/potential-trips';
import { MapPin, ArrowRight, CheckCircle2, Globe } from 'lucide-react';
---

<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="flex flex-col lg:flex-row gap-16 items-center mb-24">
            
            <div class="lg:w-1/2">
                <div class="flex items-center gap-2 mb-4">
                    <Globe className="w-6 h-6 text-blue-600" />
                    <span class="text-sm font-bold uppercase tracking-widest text-blue-600">The Call</span>
                </div>
                <h2 class="text-4xl font-bold font-serif text-slate-900 mb-6">
                    {potentialTripsData.intro.title}
                </h2>
                <div class="prose prose-lg text-slate-600 leading-relaxed">
                    {potentialTripsData.intro.description.map(paragraph => (
                        <p class="mb-4">{paragraph}</p>
                    ))}
                </div>
                <a href="/contact-us" class="btn btn-primary mt-6 bg-blue-600 border-none text-white rounded-full px-8 shadow-lg shadow-blue-600/30">
                    I'm Interested
                </a>
            </div>

            <div class="lg:w-1/2">
                <div class="relative rounded-2xl overflow-hidden shadow-2xl rotate-2 hover:rotate-0 transition-transform duration-500">
                    <img 
                        src={potentialTripsData.intro.image} 
                        alt="Missionary team" 
                        class="w-full h-auto object-cover"
                    />
                </div>
            </div>
        </div>

        <div class="border-t border-slate-100 my-16"></div>

        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-3xl font-bold font-serif text-slate-900 mb-4">Where can you serve?</h2>
            <p class="text-slate-600">Current opportunities for short-term and long-term impact.</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {potentialTripsData.destinations.map((trip) => (
                <div class="group bg-slate-50 rounded-2xl overflow-hidden border border-slate-100 hover:shadow-xl transition-all duration-300 flex flex-col h-full">
                    
                    <div class="relative h-48 overflow-hidden">
                        <div class="absolute inset-0 bg-slate-900/20 group-hover:bg-transparent transition-colors z-10"></div>
                        <img 
                            src={trip.image} 
                            alt={trip.location} 
                            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                        />
                        <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-lg text-xs font-bold uppercase text-blue-900 flex items-center gap-1 z-20">
                            <MapPin size={12} />
                            {trip.location}
                        </div>
                    </div>

                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="text-xl font-bold text-slate-900 mb-2">{trip.highlight}</h3>
                        <p class="text-slate-600 text-sm mb-6 flex-grow leading-relaxed">
                            {trip.description}
                        </p>

                        <div class="mb-6">
                            <p class="text-xs font-bold text-slate-400 uppercase mb-2">Ministry Focus:</p>
                            <div class="flex flex-wrap gap-2">
                                {trip.needs.map(need => (
                                    <span class="text-xs bg-white border border-slate-200 px-2 py-1 rounded text-slate-600 flex items-center gap-1">
                                        <CheckCircle2 size={10} />
                                        {need}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <a href="/contact-us" class="w-full btn btn-outline border-slate-300 text-slate-600 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition-colors btn-sm">
                            Inquire about this trip
                        </a>
                    </div>
                </div>
            ))}
        </div>

    </div>
</section>