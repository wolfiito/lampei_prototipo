---
// src/components/trips/PotentialTripsGrid.astro
import { potentialTripsData } from '../../data/potential-trips';
import VideoPlayer from '../common/VideoPlayer.jsx';
import { MapPin, Target, CheckCircle2 } from 'lucide-react';

interface Destination {
  location: string;
  highlight: string;
  description: string;
  image: string;
  videoId?: string; // Añadido soporte para video
  needs: string[];
}
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
  {potentialTripsData.destinations.map((trip: Destination) => (
    <div class="group bg-white rounded-[2.5rem] overflow-hidden border border-slate-100 shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col h-full">
      
      {/* Media: CONTENEDOR CON TAMAÑO PERFECTO 16:9 */}
      <div class="relative aspect-video overflow-hidden bg-slate-200">
        {trip.videoId ? (
          <VideoPlayer client:visible id={trip.videoId} title={trip.location} poster={trip.image} />
        ) : (
          <img 
            src={trip.image} 
            alt={trip.location} 
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
          />
        )}
        <div class="absolute top-4 left-4 z-20 bg-blue-600 text-white px-4 py-1 rounded-full text-[10px] font-bold uppercase tracking-widest shadow-lg">
          {trip.highlight}
        </div>
      </div>
      
      <div class="p-8 flex flex-col flex-grow">
        <div class="flex items-center gap-2 text-blue-900/40 text-xs font-bold uppercase tracking-widest mb-4">
          <MapPin size={14} className="text-blue-600" /> {trip.location}
        </div>
        
        <h3 class="text-2xl font-bold text-slate-900 mb-4 font-serif leading-tight">Opportunity in {trip.location.split(',')[0]}</h3>
        
        <p class="text-slate-600 text-sm leading-relaxed mb-8 flex-grow">
          {trip.description}
        </p>
        
        <div class="pt-6 border-t border-slate-100">
          <p class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4 flex items-center gap-2">
            <Target size={12} /> Ministry Needs
          </p>
          <div class="flex flex-wrap gap-2">
            {trip.needs.map((need) => (
              <span class="flex items-center gap-1.5 px-3 py-1.5 bg-slate-50 text-slate-600 text-[11px] font-bold rounded-lg border border-slate-100">
                <CheckCircle2 size={12} className="text-blue-500" />
                {need}
              </span>
            ))}
          </div>
        </div>

        <div class="mt-8">
          <a href="/contact-us" class="btn btn-primary btn-block rounded-2xl bg-blue-600 border-none text-white hover:bg-blue-700 h-14">
            Get Information
          </a>
        </div>
      </div>
    </div>
  ))}
</div>