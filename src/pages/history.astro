---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/common/PageHeader.astro';
import Timeline from '../components/history/Timeline.astro';
import Meaning from '../components/history/Meaning.astro';
import { historyData } from '../data/history';
---

<Layout title="Our Story | Lampei International">
    <main>
        <PageHeader 
            title={historyData.title} 
            subtitle={historyData.subtitle}
            backgroundImage={historyData.headerImage}
        />
        
        <Meaning />
        
        <div class="bg-slate-50/50">
            <Timeline />
        </div>
    </main>
</Layout>