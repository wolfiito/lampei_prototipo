    title="Our Leadership" 
    subtitle="The visionaries and pastors leading Lampei's global mission."
  />

  <section class="py-24 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      <TeamGrid client:visible members={teamData.members} />
    </div>
  </section>
</Layout>