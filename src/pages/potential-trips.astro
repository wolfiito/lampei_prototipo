---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/common/PageHeader.astro';
import PotentialTripsGrid from '../components/trips/PotentialTripsGrid.astro';
import { potentialTripsData } from '../data/potential-trips';
---

<Layout title="Potential Trips | Lampei International Ministries">
    <main>
        <PageHeader 
            title={potentialTripsData.title} 
            subtitle={potentialTripsData.subtitle} 
            backgroundImage={potentialTripsData.headerImage}
        />

        <PotentialTripsGrid />
        
    </main>
</Layout>