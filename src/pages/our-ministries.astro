---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/common/PageHeader.astro';
import MinistriesGrid from '../components/ministries/MinistriesGrid.astro';

const headerData = {
  title: "Our Ministries",
  subtitle: "Strategic initiatives to fulfill the Great Commission through planting, training, and serving.",
  image: "https://images.unsplash.com/photo-1541746972996-4e0b0f43e02a?q=80&w=2070"
};
---

<Layout title="Our Ministries | Lampei International">
  <PageHeader 
    title={headerData.title} 
    subtitle={headerData.subtitle}
    backgroundImage={headerData.image}
  />

  <main class="bg-slate-50/30">
    <MinistriesGrid />
    
    <section class="py-20 text-center bg-blue-900 relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-[url('/5QYlfw01.svg')] bg-repeat space-y-4"></div>
      </div>
      <div class="relative z-10 max-w-3xl mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 font-serif">Ready to join the mission?</h2>
        <p class="text-blue-100 mb-10 text-lg">Whether through prayer, giving, or going, there's a place for you in what God is doing.</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/donate" class="btn btn-primary btn-lg rounded-full px-8 bg-white text-blue-900 border-none hover:bg-blue-50">Partner with Us</a>
          <a href="/contact-us" class="btn btn-outline btn-lg rounded-full px-8 text-white border-white/30 hover:bg-white/10">Contact Team</a>
        </div>
      </div>
    </section>
  </main>
</Layout>