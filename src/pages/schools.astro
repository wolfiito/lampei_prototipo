---
// src/pages/schools.astro
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/common/PageHeader.astro';
import { schoolsData } from '../data/school';
import { MapPin, GraduationCap, Quote, ArrowRight } from 'lucide-react';
---

<Layout title="Our Schools | Lampei International Ministries">
  <PageHeader 
    title="Educational Institutions" 
    subtitle="Developing Christian character and academic excellence from Kindergarten to High School."
    backgroundImage="https://images.unsplash.com/photo-1509062522246-3755977927d7?q=80&w=2070"
  />

  <section class="py-24 bg-slate-50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="space-y-20">
        {schoolsData.map((school, index) => (
          <div class={`flex flex-col lg:flex-row gap-12 items-center ${index % 2 !== 0 ? 'lg:flex-row-reverse' : ''}`}>
            
            <div class="w-full lg:w-1/2 relative group">
              <div class="absolute -inset-4 bg-blue-600/5 rounded-[3rem] scale-95 group-hover:scale-100 transition-transform duration-500"></div>
              <img 
                src={school.image} 
                alt={school.name} 
                class="relative z-10 w-full h-[450px] object-cover rounded-[2.5rem] shadow-2xl"
              />
              <div class="absolute top-6 left-6 z-20 flex flex-col gap-2">
                <span class="px-4 py-2 bg-white/90 backdrop-blur-md text-blue-900 rounded-full text-xs font-bold uppercase tracking-widest shadow-lg">
                  {school.levels}
                </span>
              </div>
            </div>

            <div class="w-full lg:w-1/2 space-y-6">
              <div class="flex items-center gap-2 text-blue-600 font-bold text-sm">
                <MapPin size={18} />
                {school.location}
              </div>
              
              <h2 class="text-4xl md:text-5xl font-bold text-slate-900 font-serif leading-tight">
                {school.name}
              </h2>

              {school.inspirationText && (
                <div class="bg-white p-6 rounded-2xl border-l-4 border-blue-600 shadow-sm italic text-slate-600 relative">
                  <Quote className="absolute top-2 right-4 opacity-10 w-12 h-12" />
                  <p class="relative z-10 mb-2">"{school.inspirationText}"</p>
                  <cite class="text-xs font-bold text-slate-400">â€” {school.inspiration}</cite>
                </div>
              )}

              <p class="text-lg text-slate-600 leading-relaxed">
                {school.description}
              </p>

              <div class="pt-6">
                <a href="/contact-us" class="inline-flex items-center gap-2 btn btn-primary rounded-full px-8 shadow-xl shadow-blue-500/20">
                  Inquire for Enrollment <ArrowRight size={18} />
                </a>
              </div>
            </div>

          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-slate-900 text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <GraduationCap size={48} className="mx-auto mb-8 text-blue-400" />
      <h3 class="text-3xl font-bold font-serif mb-6">Our Educational Vision</h3>
      <p class="text-xl text-blue-100/80 leading-relaxed">
        We believe that education is not merely the transmission of facts, but the formation of a soul. 
        Our schools exist to partner with parents in raising children who love God and serve their community with excellence.
      </p>
    </div>
  </section>
</Layout>
